<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/zhihuihuanbao"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/loc"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您当前的位置：江苏大学" >
        </TextView>

    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/kehuishou"/>
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/qitalaji"/>
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/chuyulaji"/>
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/youhailaji"/>

</LinearLayout>
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp">
    <Button
        android:layout_width="7dp"
        android:layout_height="25dp"
        android:background="#2196F3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="  常见的可回收物"
        android:textStyle="bold"
        android:textSize="20dp"/>
</LinearLayout>
    <ImageView
        android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:background="@drawable/kehuishou_changjian"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <Button
            android:layout_width="7dp"
            android:layout_height="25dp"
            android:background="#FF9800"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="  常见的其他垃圾"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:background="@drawable/qitalaji_changjian"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <Button
            android:layout_width="7dp"
            android:layout_height="25dp"
            android:background="#4CAF50"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="  常见的厨余垃圾"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:background="@drawable/chuyulaji_changjian"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <Button
            android:layout_width="7dp"
            android:layout_height="25dp"
            android:background="#F44336"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="  常见的有害垃圾"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:background="@drawable/youhailaji_changjian"/>




</LinearLayout>
